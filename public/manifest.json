{
  "name": "Copy Tabs As Text",
  "manifest_version": 3,
  "version": "1.0.0",
  "description": "Copy all tab URLs and page titles with one click",
  "permissions": ["clipboardWrite", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "favicon/favicon128.png",
    "48": "favicon/favicon48.png",
    "32": "favicon/favicon32.png",
    "16": "favicon/favicon16.png"
  }
}
